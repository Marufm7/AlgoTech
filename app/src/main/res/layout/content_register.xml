<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register"
    android:id="@+id/reg_linearLayoutID"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="22dp"
                android:textColor="#00AEEF"
                android:textStyle="italic|bold"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:textColorHint="@android:color/black"
                app:boxStrokeColor="@android:color/black"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/reg_full_nameID"
                    android:hint="Full name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" This name will be used on any certificates that your earn."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:textColorHint="@android:color/black"
                app:boxStrokeColor="@android:color/black"
                android:layout_marginRight="20sp"
                android:layout_marginTop="7sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/reg_emailID"
                    android:hint="Email"
                    android:textSize="16sp"
                    android:textColorHint="@color/Black"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is what you will use yo login."
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:textColorHint="@android:color/black"
                app:boxStrokeColor="@android:color/black"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="20sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/reg_passID"
                    android:hint="Password"
                    android:textSize="16sp"
                    android:textColorHint="@color/Black"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your password must contain at lest 6 characters, Including 1 letter and 1 number."
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:textColorHint="@android:color/black"
                app:boxStrokeColor="@android:color/black"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="20sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/reg_confirm_passID"
                    android:hint="Confirm password"
                    android:textSize="16sp"
                    android:textColorHint="@color/Black"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password and Confirm Password same condition."
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:textColorHint="@android:color/black"
                app:boxStrokeColor="@android:color/black"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="20sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/reg_mobileID"
                    android:hint="Mobile number"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:textColorHint="@color/Black"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You must valid phone number."
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:textColorHint="@android:color/black"
                app:boxStrokeColor="@android:color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20sp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/reg_instituteID"
                    android:hint="Institute name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColorHint="@color/Black"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here your institute name."
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </android.support.design.widget.TextInputLayout>

            <!-- <Spinner
                 android:id="@+id/spinner"
                 android:layout_marginLeft="20sp"
                 android:layout_marginRight="20sp"
                 android:layout_width="match_parent"
                 android:autofillHints="@string/app_name"
                 android:layout_height="50sp"
                 android:layout_marginTop="5sp">-->

            <!--</Spinner>-->

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:id="@+id/registerID"
                android:text="Create my account"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/create_account_box"
                android:textColor="@android:color/white"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20sp" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>