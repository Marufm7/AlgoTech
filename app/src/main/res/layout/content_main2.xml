<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_without_Login"
    android:background="@android:color/white"
    tools:showIn="@layout/app_bar_main2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/algo_logoID"
                        android:layout_width="match_parent"
                        android:layout_height="209dp"
                        android:layout_marginTop="50sp"
                        android:src="@drawable/algotech" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/titleID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/algo_logoID"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:text="@string/home_title"
                        android:textColor="#00AEEF"
                        android:textSize="22sp" />

                    <android.support.v7.widget.SearchView

                        android:id="@+id/search_boxID"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_below="@+id/titleID"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="20sp"
                        android:autoLink="all"
                        android:background="@drawable/search_box"
                        android:drawableLeft="@drawable/search"
                        android:drawablePadding="10sp"
                        android:gravity="center|left"
                        android:hint="Srearch Courses"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="1"
                        android:maxLines="10"
                        android:minLines="1"
                        android:padding="10sp"
                        android:scrollbars="none"
                        android:textColorHint="#00AEEF"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="200sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="20sp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1">

                        <Button
                            android:id="@+id/create_accountID"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@drawable/create_account_box"
                            android:text="Create your Account"
                            android:textAllCaps="false"
                            android:layout_gravity="bottom"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.1"
                        android:background="@android:color/white">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8">

                        <Button
                            android:id="@+id/home_page_logID"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@drawable/login_box"
                            android:text="Log In"
                            android:layout_gravity="bottom"
                            android:textAllCaps="false"
                            android:textColor="#00AEEF"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>