<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Splash_Screen"
    android:background="#020202"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/full_logo"
        android:layout_width="330dp"
        android:layout_height="292dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="206dp"
        android:src="@drawable/full_algotech_title" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/splash_img"
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/full_logo"
        android:layout_alignTop="@+id/full_logo"
        android:layout_alignEnd="@+id/full_logo"
        android:layout_alignBottom="@+id/full_logo"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="279dp"
        android:layout_marginBottom="127dp"
        android:foregroundGravity="center"
        android:src="@drawable/a_algotech" />




</RelativeLayout>