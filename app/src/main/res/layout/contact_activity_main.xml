<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#28ADDF">

                <RelativeLayout
                    android:id="@+id/img_userID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="80dp"
                        android:padding="3dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/calling"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_userID"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:fontFamily="sans-serif-light"
                    android:text="Follow Us"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="28dp"/>
                <!-- <ImageView
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:src="@drawable/ic_settings"
                     android:adjustViewBounds="true"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="10dp"
                     android:scaleType="centerInside"/>-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/relativeID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:id="@+id/contact_call_Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/contact_call_IV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/call1"/>

                        <TextView
                            android:layout_toEndOf="@id/contact_call_IV"
                            android:id="@+id/contact_call_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Call Us"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_toRightOf="@id/contact_call_IV"
                            android:textStyle="italic"/>

                        <View
                            android:layout_below="@id/contact_call_TV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/grad" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/contact_email_Layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/contact_email_IV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/gmail"/>

                        <TextView
                            android:layout_toEndOf="@id/contact_email_IV"
                            android:id="@+id/contact_email_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="10dp"
                            android:text="Gmail"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_toRightOf="@id/contact_email_IV"
                            android:textStyle="italic"/>

                        <View
                            android:layout_below="@id/contact_email_TV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/grad" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/contact_fb_Layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/contact_fb_IV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/facebook"/>

                        <TextView
                            android:layout_toEndOf="@id/contact_fb_IV"
                            android:id="@+id/contact_fb_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="10dp"
                            android:text="Facebook"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_toRightOf="@id/contact_fb_IV"
                            android:textStyle="italic"/>

                        <View
                            android:layout_below="@id/contact_fb_TV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/grad" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/contact_youtube_Layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/contact_youtube_IV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/youtube"/>

                        <TextView
                            android:layout_toEndOf="@id/contact_youtube_IV"
                            android:id="@+id/contact_youtube_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="10dp"
                            android:text="Youtube"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_toRightOf="@id/contact_youtube_IV"
                            android:textStyle="italic"/>

                        <View
                            android:layout_below="@id/contact_youtube_TV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/grad" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/contact_twitter_Layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/contact_twitter_IV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/twitter"/>

                        <TextView
                            android:layout_toEndOf="@id/contact_twitter_IV"
                            android:id="@+id/contact_twitter_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="10dp"
                            android:text="Twitter"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_toRightOf="@id/contact_twitter_IV"
                            android:textStyle="italic"/>

                        <View
                            android:layout_below="@id/contact_twitter_TV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/grad" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/contact_link_in_Layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/contact_link_in_IV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/linkin"/>

                        <TextView
                            android:layout_toEndOf="@id/contact_link_in_IV"
                            android:id="@+id/contact_link_in_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="10dp"
                            android:text="Link In"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_toRightOf="@id/contact_link_in_IV"
                            android:textStyle="italic"/>

                        <View
                            android:layout_below="@id/contact_link_in_TV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/grad" />

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>